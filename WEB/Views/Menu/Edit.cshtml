@using CommonLib;
@model EntityLib.Sys_Menu
@{
    ViewBag.Title = "菜单新增/编辑";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="modal-box">
    <form id="form1" class="form-horizontal" ms-controller="data">
    <input type="hidden" id="ID" value="@Model.ID" />
    <div class="form-group">
        <label for="ParentID" class="col-sm-2 control-label">
            父级菜单</label>
        <div class="col-sm-8">
            <select class="form-control" id="ParentID">
                <option value="0">不选择默认为一级菜单</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="MenuName" class="col-sm-2 control-label">
            菜单名称</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="MenuName" placeholder="请输入菜单名称" value="@Model.MenuName" />
        </div>
    </div>
    <div class="form-group">
        <label for="LinkUrl" class="col-sm-2 control-label">
            链接地址</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="LinkUrl" placeholder="请输入链接地址" value="@Model.LinkUrl" />
        </div>
    </div>
    <div class="form-group">
        <label for="OrderIndex" class="col-sm-2 control-label">
            菜单序号</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="OrderIndex" placeholder="正序 序号越小越排在上边" value="@Model.OrderIndex" />
        </div>
    </div>
    <div class="form-group">
        <label for="Intro" class="col-sm-2 control-label">
            菜单备注</label>
        <div class="col-sm-8">
            <textarea class="form-control" id="Intro" rows="3">@Model.Intro</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="MenuImg" class="col-sm-2 control-label">
            菜单图标</label>
        <div class="col-sm-8">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="button" class="btn btn-primary" ms-click="save">
                <span class="glyphicon glyphicon-ok"></span>保存
            </button>
            <button type="button" class="btn btn-default" ms-click="close">
                <span class="glyphicon glyphicon-remove"></span>关闭
            </button>
        </div>
    </div>
    </form>
</div>
@section _JsRender{
    <script type="text/javascript" src="/content/js/require/require.js" data-main="/content/js/pageJs/Menu/Edit"></script>
}
