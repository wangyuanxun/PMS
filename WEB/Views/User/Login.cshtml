@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewBag.Title = "Login";
    var returnUrl = ViewData["returnUrl"] as string;
}
<div class="login-zooe" ms-controller="data">
    <img class="logo" src="/content/img/logo.png" />
    <h1>
        PMS</h1>
    <h3>
        系统登录</h3>
    <form class="form-horizontal">
    <input type="hidden" id="returnUrl" value="@returnUrl" />
    <div class="form-group">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="userName" placeholder="用户名" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="password" class="form-control" id="passWord" placeholder="密码" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <div class="checkbox text-left">
                <label>
                    <input type="checkbox" />记住密码
                </label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="button" class="btn btn-default" value="登 录" ms-click="login" />
    </div>
    </form>
    <a class="forgetpwd" href="javascript:void(0)" ms-click="forget">忘记密码?</a>
</div>
@section _JsRender{
    <script type="text/javascript" src="/content/js/require/require.js" data-main="/content/js/pageJs/User/Login"></script>
}
